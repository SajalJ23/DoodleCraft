<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ll_row2">



        <ImageButton
            android:id="@+id/img1"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:scaleType="fitCenter"
            android:src="@drawable/dog1"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/img2"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:scaleType="fitCenter"
            android:src="@drawable/dog2"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/img3"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:scaleType="fitCenter"
            android:src="@drawable/dog3"
            android:layout_weight="1"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_row2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ll_row1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">



        <ImageButton
            android:id="@+id/img4"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:scaleType="fitCenter"
            android:src="@drawable/dog4"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/img5"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:scaleType="fitCenter"
            android:src="@drawable/dog5"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/img6"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:scaleType="fitCenter"
            android:src="@drawable/blank_page"
            android:layout_weight="1"/>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>